# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Controller for Sudoku

GET     /                                   controllers.SchachController.schach
GET     /new                                controllers.SchachController.newField
GET     /cellPressed/:row/:col              controllers.SchachController.cellPressed(row:Int, col:Int)
GET     /move/:row/:col/:newRow/:newCol     controllers.SchachController.move(row:Int, col:Int, newRow:Int, newCol:Int)
GET     /choose/:figure                     controllers.SchachController.choose(figure:String)

GET     /about                              controllers.SchachController.about

GET     /json                               controllers.SchachController.fieldToJson

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.versioned(path="/public", file: Asset)
